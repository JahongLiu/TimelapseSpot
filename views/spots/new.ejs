<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Spot</h1>
        <div class="col-6 offset-3">
            <form action="/spots" method="Post" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title"> Title</label>
                    <input class="form-control" type="text" id="title" name="spot[title]" required>
                    <div class="valid-feedback">Looks good</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location"> Location</label>
                    <input class="form-control" type="text" id="location" name="spot[location]" required>
                    <div class="valid-feedback">Looks good</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price level"> Spot Cost</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">Price Level</span>
                        <input type="text" class="form-control" id="price" placeholder="$,$$,$$$" aria-label="price"
                            aria-describedby="price-label" name="spot[price]" required>
                        <div class="valid-feedback">Looks good</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description"> Description</label>
                    <textarea class="form-control type=" text" id="description" name="spot[description]"
                        required></textarea>
                    <div class="valid-feedback">Looks good</div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Spot</button>
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Upload Image(s)</label>
                    <input class="form-control" type="file" id="images" name="image" multiple>
                </div>
            </form>
            <a href="/spots">All Spots</a>
        </div>