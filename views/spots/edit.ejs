<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Spot</h1>
        <div class="col-6 offset-3">
            <form action="/spots/<%= spot._id %>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title"> Title</label>
                    <input class="form-control" type="text" id="title" name="spot[title]" value="<%= spot.title %>"
                        required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location"> Location</label>
                    <input class="form-control" type="text" id="location" name="spot[location]"
                        value="<%= spot.location %>" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image"> Add images</label>
                    <input type="file" name="image" id="image" multiple>
                    <div class="mb-3">
                        <label class="form-label" for="price level"> Spot Cost</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input type="text" class="form-control" id="price" placeholder="$,$$,$$$" aria-label="price level"
                                aria-describedby="price-label" name="spot[price]" value="<%= spot.price %>" required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                    </div>
                    <div class=" mb-3">
                        <label class="form-label" for="description"> Description</label>
                        <textarea class="form-control type=" text" id="description" name="spot[description]"
                            required><%=spot.description %></textarea>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="mb-3">
                        <% spot.images.forEach(function(img, i) { %>
                            <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                            <div class="form-check-inline">
                                <input type="checkbox" id="image-<%=i%>" name="deleteImages[]"
                                    value="<%=img.filename%>">
                            </div>
                            <label for="image-<%=i%>">Delete?</label>
                            <% })%>
                    </div>
                    <div class=" mb-3">
                        <button class="btn btn-info">Update Spot</button>
                    </div>
            </form>
            <a href="/spots/" <% spot._id %>>Back to Spots</a>
        </div>